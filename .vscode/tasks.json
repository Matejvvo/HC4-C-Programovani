{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file vsout",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-fdiagnostics-color=always",
                "-O2",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.vsout",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
